<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/articleImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/yellow" />

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="@font/alata"
        android:text="(Update) Iphone 13 Rumorâ€©New design?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/articleImage"
        app:layout_constraintTop_toTopOf="parent" />
<ImageView
    android:layout_width="5dp"
    android:layout_height="5dp"
    app:layout_constraintTop_toTopOf="@id/articleCategory"
    app:layout_constraintBottom_toBottomOf="@id/articleCategory"
    android:src="@drawable/ellipse1"
    android:layout_marginEnd="2dp"
    app:layout_constraintStart_toStartOf="@id/articleTitle"
    android:layout_marginTop="3dp"
    />
    <TextView
        android:id="@+id/articleCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="start"
        android:maxLines="2"
        android:textSize="14sp"
        android:fontFamily="@font/alata"
        android:text="Tech"
        android:textColor="@color/gray"

        app:layout_constraintStart_toStartOf="@id/articleTitle"
        app:layout_constraintTop_toBottomOf="@+id/articleTitle" />
    <TextView
        android:id="@+id/articleDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="7 hours"
        android:textSize="14sp"
        android:fontFamily="@font/alata"
        android:layout_marginStart="8dp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/articleCategory"
        app:layout_constraintTop_toTopOf="@id/articleCategory"
        app:layout_constraintBottom_toBottomOf="@id/articleCategory"
        />
</androidx.constraintlayout.widget.ConstraintLayout>